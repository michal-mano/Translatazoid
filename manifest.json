{
  "name": "Translatazoid",
  "description": "Translates highlighted text between a variety of languages",
  "version": "1.3",
  "manifest_version": 3,
  "permissions": ["storage"],
  "host_permissions": [],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "css": ["background.css"]
    }
  ],
  "action": {
    "default_title": "TranslateMe",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "t.png",
    "32": "t.png",
    "48": "icon_simple.png",
    "128": "icon_simple.png"
  }
}
